---
import TailwindIcon from "../icons/Tailwind.astro";
import NextJSIcon from "../icons/NextJS.astro";

const TAGS = {
    NEXT: {
        name: "Next.js",
        class: "bg-black text-white",
        icon: NextJSIcon,
    },
    TAILWIND: {
        name: "Tailwind CSS",
        class: "bg-[#003159] text-white",
        icon: TailwindIcon,
    },
};
const PROJECTS = [
    {
        title: "SVGL - A beautiful library with SVG logos",
        description:
            "Created from scratch with Next.js and Tailwind CSS. It's a library with SVG logos from the most popular brands. Optimized for SEO and performance.",
        link: "https://svgl.vercel.app/",
        github: "https://github.com/pheralb/svgl",
        image: "/projects/svgl.webp",
        tags: [TAGS.NEXT, TAGS.TAILWIND],
    },
];
---

{
    PROJECTS.map(({ title, description, image, tags }) => (
        <article>
            <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
            <p class="text-lg mb-4 text-pretty">{description}</p>
            <ul class="flex gap-x-2 flex-row mb-2">
                {tags.map((tag) => (
                    <li>
                        <span
                            class={`flex gap-x-2 rounded-full text-xs py-1 px-2 ${tag.class}`}
                        >
                            <tag.icon class="size-4" />
                            {tag.name}
                        </span>
                    </li>
                ))}
            </ul>
            <img
                src={image}
                alt={`Captura de pantalla del proyeto ${image}`}
                loading="lazy"
                class="rounded shadow-2xl shadow-white/10 aspect-video"
            />
        </article>
    ))
}
